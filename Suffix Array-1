/* Suffix Array */
/* Time Complexity O(N^2logN) */
#include <bits/stdc++.h>
using namespace std;
#define ff first
#define ss second
int main()
{
    string input ;
    cin >> input ;
    int len = input.size() ;
    vector < pair<string,int> > MyVector ;
    for(int i=0;i<len;i++) MyVector.push_back(make_pair(input.substr(i),i));
    sort(MyVector.begin(),MyVector.end());
    for(int i=0;i<MyVector.size();i++) cout << setw(2) << MyVector[i].ss << ' ' << MyVector[i].ff << endl ;
    return 0;
}
/*
abracadabra0AbRa4Cad14abra
*/
